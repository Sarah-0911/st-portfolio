---
import Card from '../Card.astro'
import { LINKS } from '../../lib/constants'
import { Linkedin, Github, Mail } from 'lucide-react'

---

<Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-4"
  title="Travaillons ensemble!"
  titleClass="text-center w-1/2 mx-auto"
  padBottom={false}
  bgColor="bg-card"
  orderClass="order-4 md:order-none"
  >
  <div class="relative w-full h-full overflow-hidden mt-6">
    <div
    class="absolute inset-0 h-full bg-no-repeat bg-top bg-contain pointer-events-none"
    style="background-image: url('/images/bg_android.png');"
    aria-hidden="true"
    >
  </div>
  <div class="relative z-10 flex flex-col items-center pt-12 sm:pt-16 gap-6">
      <div class="flex flex-col gap-6 mt-4">
        <div class="flex gap-4">
          <a class="group hover:animate-wiggle-x" href={LINKS.mail} aria-label="mail profile" target="_blank">
            <div class="relative w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-primary via-primary to-primary/80 rounded-xl shadow-lg shadow-primary/25 flex items-center justify-center transform transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-primary/40 active:scale-95">
              <div class="absolute inset-0.5 bg-gradient-to-br from-white/20 to-transparent rounded-xl"></div>
              <Mail className="w-5 h-5 sm:w-6 sm:h-6 text-white drop-shadow-sm relative z-10" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent rounded-xl"></div>
            </div>
            <span class="sr-only">Contact email</span>
          </a>
          <a class="group hover:animate-wiggle-x" href={LINKS.linkedin} aria-label="linkedin profile" target="_blank">
            <div class="relative w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-primary via-primary to-primary/80 rounded-xl shadow-lg shadow-primary/25 flex items-center justify-center transform transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-primary/40 active:scale-95">
              <div class="absolute inset-0.5 bg-gradient-to-br from-white/20 to-transparent rounded-xl"></div>
              <Linkedin className="w-5 h-5 sm:w-6 sm:h-6 text-white drop-shadow-sm relative z-10" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent rounded-xl"></div>
            </div>
            <span class="sr-only">Profil Linkedin</span>
          </a>
        </div>
        <div class="flex justify-center">
          <a class="group hover:animate-wiggle-x" href={LINKS.github} aria-label="github profile" target="_blank">
            <div class="relative w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-primary via-primary to-primary/80 rounded-xl shadow-lg shadow-primary/25 flex items-center justify-center transform transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-primary/40 active:scale-95">
              <div class="absolute inset-0.5 bg-gradient-to-br from-white/20 to-transparent rounded-xl"></div>
              <Github className="w-5 h-5 sm:w-6 sm:h-6 text-white drop-shadow-sm relative z-10" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent rounded-xl"></div>
            </div>
            <span class="sr-only">Profil GitHub</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</Card>
