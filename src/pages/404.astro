---
import BaseLayout from '../layouts/BaseLayout.astro'

import { buttonVariants } from '../components/ui/button'
---

<BaseLayout
  title="404 - Page non trouvée"
  description="Erreur 404 — cette page est introuvable"
>
  <main class="flex h-[80vh] flex-auto">
    <div class="flex flex-col items-center justify-center px-8">
      <img src="/images/sad_cat.jpg" alt="404" class="mb-8" />
      <p class="text-sm text-muted-foreground">404</p>
      <h1 class="text-4xl font-extrabold tracking-tight lg:text-5xl">
        Page introuvable
      </h1>
      <p class="mb-4 leading-7 [&:not(:first-child)]:mt-6 text-center">
        Désolé, la page que vous cherchez n'existe pas ou a été déplacée.
      </p>
      <a href="/" rel="noreferrer" class={buttonVariants()}>Retour à l'accueil</a>
    </div>
  </main>
</BaseLayout>
