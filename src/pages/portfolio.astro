---
import BaseLayout from '../layouts/BaseLayout.astro'
import TopLayout from '../layouts/TopLayout.astro'
import BottomLayout from '../layouts/BottomLayout.astro'
import ProjectCard from '../components/ProjectCard.astro'
import { PROJECTS } from '../lib/constants'
---

<BaseLayout
  title="Portfolio"
  description="Quelques projets que j'ai réalisés."
>
  <main class="flex min-h-[80vh] flex-auto flex-col" transition:animate="slide">
    <TopLayout>
      <h2 class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0 text-center">
        Projets web & mobile
      </h2>
      <p class="text-muted-foreground text-sm mt-4 max-w-xl text-center italic">
       Certains projets ne sont pas publics : Je les présente ici via visuels ou démonstrations.
      </p>

    </TopLayout>
    <BottomLayout size="xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 w-full justify-center gap-8">
        {PROJECTS.map((project) => (
          <ProjectCard
            heading={project.heading}
            subheading={project.subheading}
            imagePath={project.imagePath}
            altText={project.altText}
            href={project.href}
            class="w-80"
          />
        ))}
      </div>
    </BottomLayout>
  </main>
</BaseLayout>
